ol(class="breadcrumb")                              
	li(class="")
		a(href="/keystone/")
			|Home
	li(class="active")
		a(href="javascript:;", id="bread_pos")

script.
	var pos_old = location.pathname.split('/')[2];
	if(pos_old && pos_old !== ''){
		var pos = pos_old.toLowerCase();
		pos = pos.replace(/\b(\w)|\s(\w)/, function(m){ return m.toUpperCase();})
		$('#bread_pos').html(pos).attr('href', '/keystone/'+pos_old);

	} 
	else  $('#bread_pos').html('Index');