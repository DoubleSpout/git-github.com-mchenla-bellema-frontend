.container-fluid.container-foot
	.row
		div(id="footBox", class="footBox")
			.row
				.foot-fluid
					.col-md-2
						h2| About
						a.ftLink(href="/blog/list")|Resources
							a.ftLink(href="mailto:info@bellemausa.com")|Contact Us
						a.ftLink(href="/policy")|Privacy Policy
					.col-md-2
						h2| Products
						- productMenu.forEach(function(item,i){
							- if(i>=4) return
							a.ftLink(href="/product/list?cat=#{item.name}") #{item.name}
						- })

						a.ftLink(href="/support")|Support
						a.ftLink(href="/distributor")|Distributor


					.col-md-2
						h2| Follow Us
						a.ftLink(target="_blank",href="https://www.facebook.com/BellemaUSA")|Facebook
						a.ftLink(target="_blank",href="https://twitter.com/BellemaUSA")|Twitter
						a.ftLink(target="_blank",href="https://www.instagram.com/bellemausa/")|Instagram
						a.ftLink(target="_blank",href="https://plus.google.com/101362370657508329799")|Google+
					.col-md-4.foot-r-wrap
						.row.foot-r
							p 1 (800) 385 6819
							p Email:info@bellemausa.com
							p 675 Brea Canyon Rd Suite 9
							p Walnut, CA 91789
						.row
							p.ftSocial
								a(class="ftFb", target="_blank",href="https://www.facebook.com/BellemaUSA")
								a(class="ftTw", target="_blank",href="https://twitter.com/BellemaUSA")
								a(class="ftLn", target="_blank",href="https://www.instagram.com/bellemausa/")
								a(class="ftGp", target="_blank",href="https://plus.google.com/101362370657508329799")
	.row.ftBottom
		.foot-fluid
			.col-md-6
				|Copyright@Bellema USA 2016
			.col-md-6.al
				span
					i(class="glyphicon glyphicon-earphone" aria-hidden="true")
					|1 (800) 385 6819
				span
					i(class="glyphicon glyphicon-envelope" aria-hidden="true")
					|info@bellemausa.com



